@model TestTheme.Models.LoginDB
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/_LayoutMain.cshtml";
}
@using (Html.BeginForm("Autherize","Login",FormMethod.Post))
{
    <div class="row text-center">
        <div class="col-sm-4"></div>
        <div class="col-sm-4">
            <div class="panel panel-default">
                <div class="panel-body">
                    <form action="" class="login-form" method="post">
                        <div class="text-center">
                            <a href="/Default/Index">
                                <img src="~/img/bugg.png" height="40" width="40" alt="BugHelper">
                            </a>
                        </div>
                        <div class="text-center social-btn">
                            <a class="btn btn-block btn-social btn-google">
                                <span class="fa fa-google"></span> Google ile Giriş
                            </a>
                            <a class="btn btn-block btn-social btn-facebook">
                                <span class="fa fa-facebook"></span> Facebook ile Giriş
                            </a>
                        </div>

                        <div class="or-seperator"><b>veya</b></div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.username, htmlAttributes: new
                            {
                                @class = "form-control input-lg",
                                @placeholder = "Kullanıcı Adı",
                                @type = "text",
                                @name = "username",
                                @required = "required"
                            })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(model => model.password, htmlAttributes: new
                            {
                                @type = "password",
                                @class = "form-control input-lg",
                                @name = "password",
                                @placeholder = "Parola",
                                @required = "required",
                                @pattern = "(?=.*[!#$%^&*_-])(?=.*[a-z])(?=.*[A-Z]).{8,}",
                                @title = "En az bir sayı, bir büyük ve küçük harf,bir özel karakter ve en az 8 veya daha fazla karakter içermelidir"
                            })
                        </div>
                        <div>
                            <label class="validation-error" style="font-size:12px; color:darkred; margin-bottom:15px;">@Html.DisplayFor(model => model.LoginErrorMessage)</label>
                        </div>
                        <div class="form-group">
                            <button type="submit" value="Login" class="btn btn-success btn-block signup-btn" data-toggle="modal" data-target="#myModal">Giriş Yap</button>
                        </div>
                        <div class="modal fade" tabindex="-1" id="myModal" role="dialog">
                            <div class="modal-dialog modal-sm" role="document">
                                <div class="modal-content">
                                    <div class="modal-header" style="background-color:#202020; color:whitesmoke;">
                                        <button type="button" class="close" data-dismiss="modal" style="color:whitesmoke;">&times;</button>
                                        <h4 class="modal-title">2FA Doğrulama Kodu</h4>
                                    </div>
                                    <div class="modal-body text-center">
                                        <div class="row">
                                            
                                                <input type="text" name="2fa" class="form-control" placeholder="2FA Doğrulama Kodu" style="width:200px; text-align:center;
                                                    margin:0 auto 0 auto;" />
                                                <input type="button" class="btn btn-success" name="2faButton" value="Dogrula" style="margin-top:15px;" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="text-center small" style="text-decoration: underline; font-size: 14px;"><a href="/Login/ForgetPassword">Parolamı Unuttum</a></div>
                        <br />
                        <div class="text-center small">Henüz üye değil misin? <a href="/Login/Register" style="text-decoration:underline;">Kayıt Ol</a></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}


