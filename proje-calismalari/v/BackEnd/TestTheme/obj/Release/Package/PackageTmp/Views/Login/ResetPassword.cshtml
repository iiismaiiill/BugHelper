
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/_LayoutMain.cshtml";
}

<div class="row text-center">
    <div class="col-sm-4"></div>
    <div class="col-sm-4">
        <div class="panel panel-default">
            <div class="panel-body">
                <form action="" class="login-form" method=post
                      oninput='confirmPassword.setCustomValidity(confirmPassword.value != password.value ? "Parolalar uyuşmuyor." : "")'>
                    <h4 style="padding-top:5px; padding-bottom:10px; padding-top:10px;">Parola Değiştir</h4>

                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Yeni Parola" required="required"
                               pattern="(?=.*\d)(?=.*[!#$%^&*_-])(?=.*[a-z])(?=.*[A-Z]).{8,}" title="En az bir sayı, bir büyük ve küçük harf,bir özel karakter ve en az 8 veya daha fazla karakter içermelidir">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="confirmPassword" placeholder="Yeni Parola(Tekrar)" required="required"
                               pattern="(?=.*\d)(?=.*[!#$%^&*_-])(?=.*[a-z])(?=.*[A-Z]).{8,}" title="En az bir sayı, bir büyük ve küçük harf,bir özel karakter ve en az 8 veya daha fazla karakter içermelidir">
                    </div>
                    <div class="form-group">
                        <a href="#" class="btn btn-success btn-block signup-btn">Parola Degistir</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

