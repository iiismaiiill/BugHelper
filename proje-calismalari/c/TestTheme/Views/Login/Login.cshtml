
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/_LayoutMain.cshtml";
}
<div class="row text-center">
    <div class="col-sm-4"></div>
    <div class="col-sm-4">
        <div class="panel panel-default">
            <div class="panel-body">
                <form action="" class="login-form" method="post">
                    <div class="text-center">
                        <a href="/Default/Index">
                            <img src="~/img/bughelper-dark.png" height="40" alt="BugHelper">
                        </a>
                    </div>
                    <div class="row" style="margin-bottom:-15px;">
                        <div class="text-center social-btn" style="margin-top:15px;">
                            <div class="col-sm-6 col-xs-6">
                                <a class="btn btn-block btn-social btn-google">
                                    <span class="fa fa-google"></span> Google
                                </a>
                            </div>
                            <div class="col-sm-6 col-xs-6">
                                <a class="btn btn-block btn-social btn-facebook">
                                    <span class="fa fa-facebook"></span> Facebook
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="or-seperator"><b>veya</b></div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="username" placeholder="Kullanıcı Adı" required="required">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Parola" required="required"
                               pattern="(?=.*\d)(?=.*[!#$%^&*_-])(?=.*[a-z])(?=.*[A-Z]).{8,}" title="En az bir sayı, bir büyük ve küçük harf,bir özel karakter ve en az 8 veya daha fazla karakter içermelidir">
                    </div>
                    <div class="form-group">
                        <button type="submit" value="Login" class="btn btn-success btn-block" data-toggle="modal" data-target="#myModal">Giriş Yap</button>
                    </div>
                    <div class="modal fade" tabindex="-1" id="myModal" role="dialog" style="margin-top:50px;">
                        <div class="modal-dialog modal-sm" role="document">
                            <div class="modal-content">
                                <div class="modal-header" style="background-color:#202020; color:whitesmoke;">
                                    <h4 class="modal-title">2FA Doğrulama Kodu</h4>
                                </div>
                                <div class="modal-body text-center">
                                    <input type="text" name="2fa" class="form-control" placeholder="2FA Doğrulama Kodu" style="width:200px; text-align:center; margin:0 auto 0 auto;" />
                                    <input type="button" class="btn btn-success" name="2faButton" value="Dogrula" style="margin-top:15px;" />
                                    <div class="text-center small" style="text-decoration: underline; font-size: 12px; margin-top:15px;"><a href="#">Kodu Tekrar Gönder</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="text-center small" style="text-decoration: underline; font-size: 14px;"><button type="submit" value="Login" class="btn btn-default btn-sm" data-toggle="modal" data-target="#myModal2">Parolamı Unuttum</button></div>
                    <div class="modal fade" tabindex="-1" id="myModal2" role="dialog" style="margin-top:50px;">
                        <div class="modal-dialog modal-sm" role="document">
                            <div class="modal-content">
                                <div class="modal-header" style="background-color:#202020; color:whitesmoke;">
                                    <h4 class="modal-title">Parola Sıfırlama Bildirimi</h4>
                                </div>
                                <div class="modal-body text-center">
                                    <input type="text" name="2fa" class="form-control" placeholder="E-Posta Adresinizi Yazınız" style="width:200px; text-align:center; margin:0 auto 0 auto;" />
                                    <input type="button" class="btn btn-success" name="2faButton" value="Gönder" style="margin-top:15px;" />
                                    <div class="text-center small" style="text-decoration: underline; font-size: 12px; margin-top:15px;"><a href="#">Tekrar Gönder</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="text-center small">Henüz üye değil misin? <a href="/Login/Register" style="text-decoration:underline;">Kayıt Ol</a></div>
                </form>
            </div>
        </div>
    </div>
</div>


