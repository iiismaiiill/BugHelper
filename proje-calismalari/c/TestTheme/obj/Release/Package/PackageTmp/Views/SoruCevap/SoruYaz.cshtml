
@{
    ViewBag.Title = "SoruYaz";
    Layout = "~/Views/_LayoutMain.cshtml";
    @model TestTheme.Models.Sorular
}

<div class="row">
        @using (Html.BeginForm("SoruYaz", "SoruCevap", FormMethod.Post, new { enctype = "multipart/form-data"}))
        {
            @Html.AntiForgeryToken()
            <fieldset>

                <legend class="text-left">Sorunu Yaz</legend>
                <div class="form-group text-left">
                    <label class="col-md-2 control-label" for="textinput">Soru Başlık :</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.SoruBaslik, new { type = "text", @class = "form-control" })
                        <br />
                    </div>
                </div>
                <div class="form-group text-left">
                    <label class="col-md-2 control-label" for="textinput">Soru İçerik :</label>
                    <div class="col-md-10">
                        @Html.TextAreaFor(m => m.SoruIcerik, new { @id = "editor1" })
                        <script type="text/javascript">
                            var editor = CKEDITOR.instances['editor1'];
                            if (editor) { editor.destroy(true); }
                            CKEDITOR.replace('editor1', {
                                enterMode: CKEDITOR.ENTER_BR,
                            });
                        </script>
                        <br />
                    </div>
                </div>
                <div class="form-group text-left">
                    <label class="col-md-2 control-label" for="guncellebuton">Etiket :</label>
                    <div class="col-md-7 col-xs-12">
                        @Html.TextBoxFor(m => m.SoruEtiket, new { type = "text", @class = "form-control", @placeholder = "#java, #c++, #python" })
                        <br />
                    </div>
                    <div class="col-md-3 text-right">
                        <button type="submit" class="btn btn-success"> Tamam</button>
                        <a href="/Default/Index" class="btn btn-danger"> Vazgeç</a>
                        <br /><br /><br />
                    </div>
                </div>
            </fieldset>
        }
</div>


