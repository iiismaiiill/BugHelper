@model BugHelper.Models.Register
@{
    ViewBag.Title = "Kayıt Ol";
}
<div class="row text-center">
    <div class="col-sm-4"></div>
    <div class="col-sm-4">
        <div class="panel panel-default">
            <div class="panel-body">
                @Html.Raw(ViewBag.HataMessage1)@Html.ValidationSummary()@Html.Raw(ViewBag.HataMessage2)
                @using (Html.BeginForm("Register", "Account"))
                {
                    @Html.AntiForgeryToken()
                    <div class="text-center">
                        <a href="/Home/Index">
                            <img src="~/img/bughelper-dark.png" height="40" alt="BugHelper">
                        </a>
                    </div>
                    <div class="row" style="margin-bottom:-15px;">
                        <div class="text-center social-btn" style="margin-top:15px;">
                            <div class="col-sm-6 col-xs-6">
                                <a href="/Account/RedirectToExternalLogin" class="btn btn-block btn-social btn-google">
                                    <span class="fa fa-google"></span> Google
                                </a>
                            </div>
                            <div class="col-sm-6 col-xs-6">
                                <a href="/Account/RedirectToExternalLoginFB" class="btn btn-block btn-social btn-facebook">
                                    <span class="fa fa-facebook"></span> Facebook
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="or-seperator"><b>veya</b></div>
                    <div class="form-group">
                        @Html.TextBoxFor(i => i.UserName, new { @class = "form-control", @type = "text", @placeholder = "Kullanıcı Adı" })
                    </div>
                    <div class="form-group">
                        <input class="form-control" data-val="true" data-val-required="Email alanı gereklidir." id="Email" name="Email" type="email" placeholder="E Mail" aria-describedby="emailHelp">
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(i => i.Password, new { @class = "form-control", @type = "password", @placeholder = "Parola", @title = "En az bir sayı, bir büyük ve küçük harf,bir özel karakter ve en az 8 veya daha fazla karakter içermelidir" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(i => i.ConfirmPassword, new { @class = "form-control", @type = "password", @placeholder = "Parola(Tekrar)", @title = "En az bir sayı, bir büyük ve küçük harf,bir özel karakter ve en az 8 veya daha fazla karakter içermelidir" })
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success btn-block signup-btn">Kayıt Ol</button>
                    </div>
                }
                <div class="text-center small">Zaten üye misin? <a href="/Account/Login" style="text-decoration:underline;">Giris Yap</a></div>
            </div>
                </div>
            </div>
        </div>