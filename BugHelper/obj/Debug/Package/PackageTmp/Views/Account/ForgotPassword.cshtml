@model BugHelper.Models.LoginModel
@{
    ViewBag.Title = "Forgot your password?";
    Layout = null;
}
<div class="text-center small" style="text-decoration: underline; font-size: 14px;"><button type="submit" value="Login" class="btn btn-default btn-sm" data-toggle="modal" data-target="#myModal2">Parolamı Unuttum</button></div>
<div class="modal fade" tabindex="-1" id="myModal2" role="dialog" style="margin-top:50px;">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#202020; color:whitesmoke;">
                <h4 class="modal-title">Parola Sıfırlama Bildirimi</h4>
            </div>
            <div class="modal-body text-center">
                @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    <input type="text" name="email" class="form-control" placeholder="E-Posta Adresinizi Yazınız" style="width:200px; text-align:center; margin:0 auto 0 auto;" />
                    <input type="submit" class="btn btn-success" style="margin-top:15px;" />
                }
                <div class="text-center small" style="text-decoration: underline; font-size: 12px; margin-top:15px;"><a href="#">Tekrar Gönder</a></div>
            </div>
        </div>
    </div>
</div>
