@model BugHelper.Models.LoginModel
@{
    ViewBag.Title = "Login";
}
<div class="row text-center">
    <div class="col-sm-4"></div>
    <div class="col-sm-4">
        <div class="panel panel-default">
            <div class="panel-body">
                @Html.ValidationSummary()

                @using (Html.BeginForm("Login", "Account"))
                {
                    @Html.AntiForgeryToken()
                    <div class="text-center">
                        <a href="/Home/Index">
                            <img src="~/img/bughelper-dark.png" height="40" alt="BugHelper">
                        </a>
                    </div>
                    <div class="row" style="margin-bottom:-15px;">
                        <div class="text-center social-btn" style="margin-top:15px;">
                            <div class="col-sm-6 col-xs-6">
                                <a href="/Account/RedirectToExternalLogin" class="btn btn-block btn-social btn-google">
                                    <span class="fa fa-google"></span> Google
                                </a>
                            </div>
                            <div class="col-sm-6 col-xs-6">
                                <a href="/Account/RedirectToExternalLoginFB" class="btn btn-block btn-social btn-facebook">
                                    <span class="fa fa-facebook"></span> Facebook
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="or-seperator"><b>veya</b></div>
                    <div class="form-group">
                        @Html.TextBoxFor(i => i.UserName, new { @class = "form-control", @placeholder = "Kullanıcı Adı", @required = "required" })
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(i => i.Password, new { @class = "form-control", @placeholder = "Parola", @required = "required", @title = "En az bir sayı, bir büyük ve küçük harf,bir özel karakter ve en az 8 veya daha fazla karakter içermelidir" })
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success btn-block signup-btn">Giriş Yap</button>
                    </div>
                    <br />
                    <div class="text-center small">Henüz üye değil misin? <a href="/Account/Register" style="text-decoration:underline;">Kayıt Ol</a></div>
                }
                @Html.Partial("~/Views/Account/ForgotPassword.cshtml")
            </div>
                            </div>
                        </div>
                    </div>


