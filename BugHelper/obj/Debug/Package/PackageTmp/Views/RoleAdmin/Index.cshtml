@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Index";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        Roller
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Kullanıcı Adı</th>
                <th></th>
            </tr>
        </thead>

        @if (Model.Count() == 0)
        {
        <tbody>
            <tr>
                <td colspan="3">Rol Yok</td>
            </tr>
        </tbody>
        }
        else
        {
            foreach (var role in Model)
            {
            <tbody>
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td>
                        @using (Html.BeginForm("Delete", "RoleAdmin", new { id = role.Id }))
                        {
                            @Html.ActionLink("Güncelle", "Edit", new { id = role.Id }, new { @class = "btn btn-primary btn-sm" })
                            <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                        }
                    </td>
                </tr>
            </tbody>
            }
        }
    </table>
    <button class="btn btn-outline-dark">@Html.ActionLink("Oluştur", "Create","RoleAdmin")</button>
</div>
