@model BugHelper.Models.IletisimModel
@{
    ViewBag.Title = "İletişim";
}
<div class="container">
    @using (Html.BeginForm("Iletisim", "Kullanici", FormMethod.Post, new { @class = "form-horizontal" }))
    {
    <fieldset>

        <legend class="text-left">Bize Ulaşın</legend>
        @Html.Raw(@ViewBag.Message)
        <div class="row">
            <div class="col-md-12">
                <p class="text-justify">Ürün ve hizmetlerimizi geliştirebilmemiz için görüş ve önerileriniz bizim için son derece önemlidir. Görüş ve önerileriniz en kısa zamanda değerlendirilecek ve sonucu hakkında size mutlaka geri dönülecektir. Hizmet ve ürünler ile ilgili görüş/öneri ve şikayetlerinizi aşağıdaki online başvuru formunu doldurarak Bughelper Merkezi'ne iletebilirsiniz.</p>
            </div>
        </div>
        <div class="row">
            <br />
            <div class="col-md-4 text-left">
                <p><b>İletişim Bilgileri</b></p>
                <p><span class="glyphicon glyphicon-map-marker"></span> Isparta, Türkiye</p>
                <p><span class="glyphicon glyphicon-phone"></span> Phone: +00 1515151515</p>
                <p><span class="glyphicon glyphicon-envelope"></span> Email: bughelperteam@gmail.com</p>
            </div>
            <div class="col-md-8">
                <div class="form-group">
                    <div class="col-sm-6 col-xs-12">
                        @Html.TextBoxFor(i => i.AdSoyad, new { @class = "form-control", @placeholder = "Ad Soyad", @required = "required" })
                    </div>
                    <div class="col-sm-6 col-xs-12">
                        @Html.TextBoxFor(i => i.Email, new { @class = "form-control", @placeholder = "E-Mail", @type = "email", @required = "required" })
                    </div>
                </div>
                @Html.TextAreaFor(i => i.Mesaj, new { @class = "form-control", @placeholder = "Mesaj", @rows = "5", @required = "required" })
                <br />
                <div class="form-group">
                    <div class="col-md-12">
                        <button class="btn btn-success pull-right" type="submit">Mesaj Gönder</button>
                    </div>
                </div>
            </div>
        </div>
        <legend class="text-left"></legend>
        <div class="row">
            <div class="col-md-12">
                <div class="text-center">
                    <p><b>Bize Sosyal Medya Üzerinden Ulaşın</b></p>
                    <a class="btn btn-social-icon btn-facebook">
                        <span class="fa fa-twitter"></span>
                    </a>
                    <a class="btn btn-social-icon btn-twitter">
                        <span class="fa fa-twitter"></span>
                    </a>
                    <a class="btn btn-social-icon btn-github">
                        <span class="fa fa-github"></span>
                    </a>
                    <a class="btn btn-social-icon btn-bitbucket">
                        <span class="fa fa-bitbucket"></span>
                    </a>
                    <br /><br />
                </div>
            </div>
        </div>
    </fieldset>
    }
</div>